% hack to make the hyperref style more customizable
% \smash reduces the space between the underline and the word
\newcommand{\link}[2]{%
    {\color{sunset}\underline{%
        \smash{\href{#1}{\color{lightdark}#2}}}
    }
}

% plain frame with centered message
% http://tex.stackexchange.com/questions/2326/vertically-center-text-on-a-page
\newcommand{\plaintextframe}[1]{
\begin{frame}[plain, c]
    \topskip0pt
    \vspace*{\fill}
        \begin{center}
            \Huge \textbf{#1}
        \end{center}
    \vspace*{\fill}
\end{frame}
}

