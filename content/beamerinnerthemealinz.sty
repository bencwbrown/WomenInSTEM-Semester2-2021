\mode<presentation>

% -----------------------------------
% title page
% -----------------------------------

% define the meta stuff for the titelframe
\title[\shortTitle]{\presentationTitle{}}
\subtitle{\presentationSubtitle}
\institute[]{
    {\large \textsc{\university{}}}
    \par\medskip
    {\normalsize \textit{\universityDepartment{}} \textemdash{} \universityCourse{}}
}
\author[\presentationAuthorShort]{\presentationAuthor}
\titlegraphic{\includegraphics[width=30mm]{resources/logo}} % logo
\date{\today}
\subject{\presentationSubject}
\keywords{\presentationKeywords{}}

% customized title page layout
\defbeamertemplate*{title page}{customized}[1][]
{
    \centering
    \par
%    \usebeamercolor[fg]{normal text}
%    \usebeamerfont{institute}{\usebeamercolor[fg]{institute}\insertinstitute}\par
    %\resizebox{!}{2cm}{\inserttitlegraphic}
    \vfill
    \begin{beamercolorbox}[wd=\paperwidth]{titlepage-headline}
    {
        \par\smallskip
        \usebeamerfont{title}{\begin{center}\inserttitle\end{center}}
        \par\bigskip
    }
    \end{beamercolorbox}
    \vskip-2pt
    \begin{beamercolorbox}[wd=\paperwidth]{frametitle}
        \par\smallskip
        \small
        \begin{center}
        \usebeamerfont{author}{\textbf{\insertauthor{}}}
        \par
        \href{mailto:\presentationAuthorEmail}{\presentationAuthorEmail}
        \end{center}
        \par\medskip
    \end{beamercolorbox}
    \vfill
    {
        \usebeamercolor[fg]{normal text}
        \small
%        \usebeamerfont{author}\textbf{\insertauthor{}}
%        \par
%        \href{mailto:\presentationAuthorEmail}{\presentationAuthorEmail}
%        \par
        \presentationLocation{}
        \par
        \adforn{45}
        \par
        \usebeamerfont{date}\insertdate
    }
    \par
}

% -----------------------------------
% enumerations and itemize
% -----------------------------------

\setbeamertemplate{itemize item}{\footnotesize\raise1pt\hbox{$\blacktriangleright$}}
\setbeamertemplate{itemize subitem}{\scriptsize\raise1pt\hbox{$\vartriangleright$}}
\setbeamertemplate{itemize subsubitem}{\tiny\raise1pt\hbox{$\bullet$}}
\setbeamertemplate{enumerate item}{\rmfamily\itshape\insertenumlabel.}

% -----------------------------------
% bibliography
% -----------------------------------

% remove those ugly beamer bibliography icons
\setbeamertemplate{bibliography item}{$\blacktriangleright$}

% -----------------------------------
% table of contents
% -----------------------------------

\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{subsection in toc}[subsections numbered]
% \setbeamertemplate{subsubsection in toc}[subsubsections numbered]
% subsubsection should'nt been used in a presentation in the first place

\mode<all>
